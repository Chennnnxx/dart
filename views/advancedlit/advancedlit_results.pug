extends ../ui_layout

block content
  -var cdn = "https://dhpd030vnpk29.cloudfront.net";
  -var chosenTopic = user.advancedlitTopic;
  
  .ui.container.resultsAddBottomMargin
    .ui.stackable.column.grid
      .ui.column
        .insertPrint
        .ui.raised.segment.reflectionTopSegment
          h3.ui.header
            i.question.blue.icon
            .content
              | Reflect
          
          .ui.mini.green.right.labeled.icon.button.reflectionSegmentButton.voiceover_reflection1
            i.down.arrow.icon
            |   Start
          .ui.basic.segment.reflectionPromptSegment.hidden.selectPostsQuestion1    
            .ui.label.resultsPromptLabel
              h4
                i.exclamation.triangle.icon

                | There were two breaking news articles and one opinion piece 
                | about Chestin hosting the olympics. Did you notice any of them?
            br
            br
            h3.grayElement(style="color:#696969;")
              i.hand.pointer.icon
              | Click on the ones that you noticed!
            .ui.stackable.three.cards.selectablePosts
              .ui.fluid.card.dim#card1
                .content     
                  p.left.floated(href='/user/emememily')
                    img.ui.avatar.image(src=cdn+'/profile_pictures/user36.jpg')
                    span='Emily Li'
                .image
                  img.post(src=cdn+'/post_pictures/olympic1_an.png')
                .content.descriptionContent
                  .description
                    | Wow just heard that we will be hosting the olympics?!?!?
                    
              .ui.fluid.card.dim#card2
                .content        
                  p.left.floated(href='/user/ella_vaderrr')
                    img.ui.avatar.image(src=cdn+'/profile_pictures/user25.jpg')
                    span='Ella Sroni'
                .image
                  img.post(src=cdn+'/post_pictures/olympic2_an.png')
                .content.descriptionContent
                  .description
                    | Interesting article on how Chestin could host the Olympics
          
              .ui.fluid.card.dim#card3
                .content   
                  p.left.floated(href='/user/morning-tea-and-books')
                    img.ui.avatar.image(src=cdn+'/profile_pictures/user12.jpg')
                    span='Shika Ramphal'
                .image
                  img.post(src=cdn+'/post_pictures/olympic3_an.png')
                .content.descriptionContent
                  .description
                    | Woo!! Go Chestin go!!


            br
            br

        .ui.basic.segment.noPadding.hidden.reflectionTopSegment
          .ui.raised.segment
            .ui.mini.green.right.labeled.icon.button.reflectionSegmentButton.voiceover_reflection2
              i.down.arrow.icon
              |   Next
            .ui.basic.segment.noPadding.reflectionPromptSegment.hidden 
              .ui.label.resultsPromptLabel
                h4.reflectionCheckboxesPrompt
                  | What did you do when you saw a breaking news story?
              .content.checkOne
                .ui.form
                  br
                  .inline.fields
                    label(for='wouldRead', name='wouldRead') 
                    .field
                      .ui.checkbox
                        input(type='checkbox')
                        label(for='wouldRead', tabindex='0') 
                          | I checked to see if it was an opinion piece
                .ui.form
                  .inline.fields
                    label(for='checkSource', name='checkSource') 
                    .field
                      .ui.checkbox
                        input(type='checkbox')
                        label(for='checkSource', tabindex='0') 
                          | I looked at the source(s) of the information in the article
                .ui.form
                  .inline.fields
                    label(for='corroboration', name='corroboration') 
                    .field
                      .ui.checkbox
                        input(type='checkbox')
                        label(for='corroboration', tabindex='0')
                          | I checked other sources
                .ui.form
                  .inline.fields
                    label(for='interacted', name='interacted') 
                    .field
                      .ui.checkbox
                        input(type='checkbox')
                        label(for='interacted', tabindex='0')
                          | I shared the news article
                .ui.form
                  .inline.fields
                    label(for='corroboration', name='wouldViewAd') 
                    .field
                      .ui.checkbox
                        input(type='checkbox')
                        label(for='wouldViewAd', tabindex='0') 
                          | I flagged the post
                .ui.form
                  .inline.fields
                    label(for='ignored', name='ignored') 
                    .field
                      .ui.checkbox
                        input(type='checkbox')
                        label(for='ignored', tabindex='0') 
                          | I did not do anything 

        .ui.basic.segment.noPadding.hidden.reflectionTopSegment
          .ui.raised.segment
            .ui.mini.green.right.labeled.icon.button.reflectionSegmentButton.voiceover_reflection3
              i.down.arrow.icon
              |   Next
            .ui.basic.segment.noPadding.reflectionPromptSegment.hidden 
              .ui.label.resultsPromptLabel
                h4.reflectionPrompt
                  | Did you read any of the articles? Did you notice any signs that the 
                  | article may be inaccurate?
              .ui.form
                .inline.fields
                  label
                  textarea.glowing-border(rows='2' id="literacy_responseOne")
                    
        .ui.basic.segment.noPadding.hidden.reflectionTopSegment
          .ui.raised.segment
            .ui.mini.green.right.labeled.icon.button.reflectionSegmentButton.voiceover_reflection4
              i.down.arrow.icon
              |   Next
            .ui.basic.segment.noPadding.reflectionPromptSegment.hidden 
              .ui.label.resultsPromptLabel
                h4.reflectionPrompt
                  | Why is it important to get the full story before reacting to or 
                  | sharing breaking news?
              .ui.form
                .inline.fields
                  label
                  textarea.glowing-border(rows='2' id="literacy_responseTwo")


    .ui.warning.message.hidden.startPromptsWarning
      .header
        | Click "Start"
    .ui.warning.message.hidden.openAllPromptsWarning
      .header
        | Click "Next"
    br
    .ui.big.labeled.icon.button.results_print(onclick="onPrint()")
          i.right.arrow.icon
          |   Print your responses
    br
    br
    .ui.big.labeled.icon.button.results_end
          i.rocket.icon
          |   Continue

