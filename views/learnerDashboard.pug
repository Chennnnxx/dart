    .row.centerText.newDashboardSection
      h2 
        i.compass.outline.icon
        |  Learning Map
    .ui.divider
    .ui.basic.segment
      table.ui.table#learningMapTable
        tbody
          tr
            td.rightBorder.right.aligned.yAxisLabel(data-label='Topic') Privacy
            td.center.aligned(data-label='Basic') 
              .container(data-mapTableMod="phishing")
                .ui.segment
                  h3 Scams & Phishing
            td.center.aligned(data-label='Intermediate') 
              .container(data-mapTableMod="targeted")
                .ui.segment
                  h3 Ads on Social Media
            td.center.aligned(data-label='Advanced')
              .container(data-mapTableMod="privacy")
                .ui.segment
                  h3 Social Media Privacy
          tr
            td.collapsing.rightBorder.right.aligned.yAxisLabel(data-label='Name') Digital Footprint
            td.center.aligned(data-label='Basic')
              .container(data-mapTableMod="accounts")
                .ui.segment
                  h3 Accounts & Passwords
            td.center.aligned(data-label='Intermediate')
            td.center.aligned(data-label='Advanced')
              .container(data-mapTableMod="digfoot")
                .ui.segment
                  h3 Shaping your Digital Footprint
          tr
            td.rightBorder.right.aligned.bottom.aligned.yAxisLabel(data-label='Name') Relationships
            td.center.aligned(data-label='Basic') 
              .container(data-mapTableMod="presentation")
                .ui.segment
                  h3 Online Identities
            td.center.aligned(data-label='Intermediate') 
              .container(data-mapTableMod="esteem")
                .ui.segment
                  h3 The Ups and Downs of Social Media
            td.center.aligned(data-label='Advanced') 
          tr
            td.rightBorder.right.aligned.yAxisLabel(data-label='Name') 
            td.center.aligned(data-label='Basic') 
              .container(data-mapTableMod="safeposting")
                .ui.segment
                  h3 Is It Private Information?
            td.center.aligned(data-label='Intermediate') 
              .container(data-mapTableMod="cyberbullying")
                .ui.segment
                  h3 How to Be an Upstander
            td.center.aligned(data-label='Advanced') 
              .container(data-mapTableMod="habits")
                .ui.segment
                  h3 Healthy Social Media Habits
          tr
            td.rightBorder.right.aligned.yAxisLabel(data-label='Name') News Literacy
            td.center.aligned(data-label='Basic') 
              .container(data-mapTableMod="digitalliteracy")
                .ui.segment
                  h3 News on Social Media
            td.center.aligned(data-label='Intermediate') 
            td.center.aligned(data-label='Advanced') 
              .container(data-mapTableMod="advancedlit")
                .ui.segment.middle.aligned
                  h3 Responding to Breaking News!
          tr
            td.collapsing.xAxisLabel(data-label='Name') 
            td.center.aligned.topBorder.xAxisLabel(data-label='Basic') Basic
            td.center.aligned.topBorder.xAxisLabel(data-label='Intermediate') Intermediate
            td.center.aligned.topBorder.xAxisLabel(data-label='Advanced') Advanced
