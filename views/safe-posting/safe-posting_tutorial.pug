  script().
    function startIntro(){
        var intro = introJs()
          intro.setOptions({
            'hidePrev': true, 
            'hideNext': true, 
            'exitOnOverlayClick': false, 
            'showStepNumbers':false,
            'scrollToElement':false,
            'doneLabel':'Done &#10003',
            steps: [
              { 
                element: document.querySelectorAll('#post2_header')[0],
                intro: 'Before you talk to someone online, ask yourself.<br><i class="question circle outline icon"></i> Do I know this person offline? Have I met them face-to-face?<br><i class="comment outline icon"></i> If the answer is ‚ÄúNo‚Äù to either, be careful about what you say to them.',
                position: 'top',
              },
              {
                element: document.querySelectorAll('.chat-history ul')[0],
                intro: "If someone you don‚Äôt know asks for private information or pressures you to share personal things, here are some strategies you can use to respond. ",
                position: 'top',
                highlightClass:"helperHelper"
              
              },
              { 
                element: document.querySelectorAll('.chat-message')[0],
                intro: "Change the subject or say: ‚ÄúI don't want to talk about this.",
                position: 'top',
                highlightClass:"helperHelper"
              },
              { 
                element: document.querySelectorAll('.chat-message')[0],
                intro: "Use humor to change the conversation, such as: ‚ÄúYou're asking so many questions?! Haha you sound like my nosy aunt.",
                position: 'top',
                highlightClass:"helperHelper"            
              },
              { 
                intro: "Ask a trusted adult for advice or help if you feel unsure or uncomfortable in any situation.",
                position: 'top'
              },             
              { 
                intro: "Keep in mind, you do not have to share anything, even if you are pressured! It's not okay for someone to pressure you, and that's not being a good friend.",
                position: 'top'
              },
            ]
          });
          intro.start().onexit(function() {
          window.location.href='/tut_guide/safe-posting';
        });          
      };

      $(window).on("load", function() {startIntro();});
