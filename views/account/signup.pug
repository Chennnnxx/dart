extends ../ui_layout

block content
  .computer.only.tablet.only.eight.wide.column
    img.ui.fluid.image(src='/internet.png')
  

  .eight.wide.computer.eight.wide.tablet.sixteen.wide.mobile.column
    h2.ui.header Sign Up
    p="Before you can create an account, enter the access code given my your instructor."
    form.ui.form(id='signup-form', method='POST')
      input(type='hidden', name='_csrf', value=_csrf)
      .field
        label(for='signupcode') Sign Up Code
        input(type='text', name='signupcode', id='signupcode', placeholder='Sign Up Code', required)
      button.ui.button(type='submit') Signup
  br
  br
  br
  a(href="/privacy")="Privacy policy"
