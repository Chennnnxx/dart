extends ../ui_layout

block content
  -var cdn = "https://dhpd030vnpk29.cloudfront.net";
  -var chosenTopic = user.esteemTopic;
  
  .ui.container.addBottomMargin
    .ui.stackable.column.grid
      .ui.column
        .insertPrint
        .ui.raised.segment
          h3.ui.header
            i.question.blue.icon
            .content
              | Reflect
          .ui.label.resultsPromptLabel
            h4
              i.exclamation.triangle.icon

              | Here are some posts that might have caused Jeremy to experience 
              | a red flag feeling, did you notice any of them?
          br
          br
          .ui.stackable.three.cards
            
            if (chosenTopic == 'Sports')
              
              .ui.fluid.card.dim
                .content      
                  a.left.floated(href='/user/sassystar75')
                    img.ui.avatar.image(src=cdn+'/profile_pictures/user53.jpg')
                    span='Brielle Jordan'
                .image
                  img.post(src=cdn+'/post_pictures/bigmatch_se.jpg')
                .content
                  .description
                    | Watching the big match with my BFF!!
          
              .ui.fluid.card.dim
                .content      
                  a.left.floated(href='/user/habbey113')
                    img.ui.avatar.image(src=cdn+'/profile_pictures/user4.jpg')
                    span='Hayden Abbey'
                .image
                  img.post(src=cdn+'/post_pictures/signedball_se.jpg')
                .content
                  .description
                    | Can't believe my parents got me a GENUINE signed ball

              .ui.fluid.card.dim
                .content      
                  a.left.floated(href='/user/sassystar75')
                    img.ui.avatar.image(src=cdn+'/profile_pictures/user53.jpg')
                    span='Brielle Jordan'
                .image
                  img.post(src=cdn+'/post_pictures/tryouts_se.jpg')
                .content
                  .description
                    | Yaaaaaaas made it to the next round of soccer tryouts. 
                    | Sorry Hayden and Jeremy
                    
            if (chosenTopic == 'Gaming')
              
              .ui.fluid.card.dim
                .content      
                  a.left.floated(href='/user/asherballer')
                    img.ui.avatar.image(src=cdn+'/profile_pictures/user48.jpeg')
                    span='Asher Michaels'
                .image
                  img.post(src=cdn+'/post_pictures/computer-game_se.jpg')
                .content
                  .description
                    | Honestly think I am the best player in our meetup league

              .ui.fluid.card.dim
                .content      
                  a.left.floated(href='/user/princess_lindss')
                    img.ui.avatar.image(src=cdn+'/profile_pictures/user30.jpg')
                    span='Linsday Stokes'
                .image
                  img.post(src=cdn+'/post_pictures/switch_se.jpg')
                .content
                  .description
                    | Just got a new Switch! Any games I should ask my parents 
                    | to buy me?

              .ui.fluid.card.dim
                .content      
                  a.left.floated(href='/user/asherballer')
                    img.ui.avatar.image(src=cdn+'/profile_pictures/user48.jpeg')
                    span='Asher Michaels'
                .image
                  img.post(src=cdn+'/post_pictures/nintendo_se.jpg')
                .content
                  .description
                    | Playing online with my best friend  
                    
            if (chosenTopic == 'Music')
              
              .ui.fluid.card.dim
                .content     
                  a.left.floated(href='/user/frank-the-best')
                    img.ui.avatar.image(src=cdn+'/profile_pictures/user10.jpg')
                    span='Franklin Robinson' 
                .image
                  img.post(src=cdn+'/post_pictures/concert-crowd_se.jpg')
                .content
                  .description
                    | We missed you at the concert Jeremy!

              .ui.fluid.card.dim
                .content      
                  a.left.floated(href='/user/kilani244')
                    img.ui.avatar.image(src=cdn+'/profile_pictures/user5.jpeg')
                    span='Kiki Pualani'
                .image
                  img.post(src=cdn+'/post_pictures/electric_se.jpg')
                .content
                  .description
                    | I just got the best present ever!
  
              .ui.fluid.card.dim
                .content      
                  a.left.floated(href='/user/frank-the-best')
                    img.ui.avatar.image(src=cdn+'/profile_pictures/user10.jpg')
                    span='Franklin Robinson' 
                .image
                  img.post(src=cdn+'/post_pictures/bestguitar_se.JPG')
                .content
                  .description
                    | i'm a better player than everyone else @ music camp tbh

          br
          br


    .ui.raised.segment
      .ui.label.resultsPromptLabel
        h4
          | Do you remember seeing other posts that might have caused Jeremy to 
          | feel good? What were they?
      .ui.form
        .inline.fields
          label
          textarea.glowing-border(rows='2' id="literacy_responseOne")
            
    .ui.raised.segment
      .ui.label.resultsPromptLabel
        h4
          | What could you do to feel better when you get red flag feelings on 
          | social media?
      .ui.form
        .inline.fields
          label
          textarea.glowing-border(rows='2' id="literacy_responseTwo")


    br
    .ui.big.green.labeled.icon.button(onclick="onPrint()")
          i.right.arrow.icon
          |   Print your responses
    br
    br
    .ui.big.green.labeled.icon.button.cyberbullying_end
          i.rocket.icon
          |   Continue

      
