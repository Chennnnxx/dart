extends ../ui_layout

block content

  .ui.text.container
    br
    
    h2.ui.header
      //- i.check.square.outline.green.icon
      .content What can you do if you want to prevent targeted advertisements?
      
        .sub.header 
          br
          i.eye.icon 
          span Read and check all the boxes
        
    .ui.styled.fluid.accordion
      #point1.title
        i.dropdown.icon
        |     Turn off cookies
      .content.ui.list
          .item
            #protip1.ui.floated.compact.segment
              .ui.fitted.large.checkbox#checkbox1
                input.ui(type="checkbox" id="")
            .label Cookies are used to identify your device and track your behavior. You can turn them off using privacy settings..

          .item
              #point1_button.button.ui.mini.green.right.labeled.icon.button
                i.down.arrow.icon
                | Next
                
      #point2.title
        i.dropdown.icon
        |     Adjust privacy settings
      .content.ui.list
          .item
            #protip2.ui.floated.compact.segment
              .ui.fitted.large.checkbox#checkbox2
                input.ui(type="checkbox")
            .label Stop the data from being collected in the first place! Change your privacy settings so that the website does not collect information. 
          
          .item
              #point2_button.button.ui.mini.green.right.labeled.icon.button
                i.down.arrow.icon
                | Next
                  
      #point3.title
        i.dropdown.icon
        |     Limit what you share
      .content.ui.list
          .item
            #protip3.ui.floated.compact.segment
              .ui.fitted.large.checkbox#checkbox3
                input.ui(type="checkbox")
            .label If it is not required, do not provide your information or link your profile to a website.
          
    .ui.icon.info.message
      i.info.circle.icon
      .content
        .header
          | If you want to learn more about how to change your privacy settings, look at the “Social Media Privacy” module on TestDrive!
                     
    br
    .ui.warning.message#checkAllBoxesWarning(style="display:none;")
     .header
      | Check all the boxes to proceed
    .ui.big.labeled.icon.button.cybersim#cyberSimButton
        i.rocket.icon
        |   Got it!
    br
    br
    br
block scripts
  script().
  
    $('.ui.accordion').accordion();   

    setTimeout(function(){
      $('.sub.header').transition('shake'); 
    }, 1500);

    setTimeout(function(){
      $('#point1').transition('jiggle');    
    }, 2500);
    
    setTimeout(function(){
      $('#point2').transition('jiggle');    
    }, 3000);
    
    setTimeout(function(){
      $('#point3').transition('jiggle');    
    }, 3500);


    $('#point1_button').on('click', function () {
        $('#point2').transition('jiggle');
        $('#point2').click();
     });
     
     $('#point2_button').on('click', function () {
         $('#point3').transition('jiggle');
         $('#point3').click();
      });


    $("input").change(function(){
      if (($('input:checked').length) == 
            ($('input').length)){
        $("#checkAllBoxesWarning").hide();
        $('.ui.big.labeled.icon.button.cybersim').addClass('green');
        $('.ui.big.labeled.icon.button.cybersim').transition('jiggle');
      }
      else{
        $('.ui.big.labeled.icon.button.cybersim').removeClass('green');
      }
    });
    
    $("#cyberSimButton").on('click', function() {
      if(($('input:checked').length) != ($('input').length)){
        $("#checkAllBoxesWarning").show();
      }
    });
   
    
    
