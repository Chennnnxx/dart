extends ../ui_layout

block content
  .ui.container
    .ui.stackable.column.grid
      .ui.column
        .ui.raised.segment
          .ui.label(style="background-color:#2185d08a;color:#000000d1;")
            h4(style="float:left")
              i.exclamation.triangle.icon(style="color: #f9ff00 !important;")

              | These were the cyberbullying posts in the timeline. How many did you notice?
          br
          br
          .ui.stackable.three.cards
            
            .ui.fluid.card.dim()#card1
              .content
                .right.floated.time 1 hour ago
                a(href='/user/ella_vaderrr')
                  img.ui.avatar.image(src='/profile_pictures/user25.jpg')
                  span Ella Sroni
              .image
                img.post(src='/blackbkg.jpg')
              .content
                .description
                  | No one likes you. Why do you come to school? @
                  a(href='/user/DylanCrazzzzzy') Dylan Goldstein
        
          
            .ui.fluid.card.dim()#card2
              .content
                .right.floated.time 1 hour ago
                a(href='/user/goaliegirl')
                  img.ui.avatar.image(src='/profile_pictures/user29.jpg')
                  span Breana Summers
              .image
                img.post(src='/ewww.jpg')
              .content
                .description Dylan smells like he didn&apos;t shower for a week


            .ui.fluid.card.dim()#card3
              .content
                .right.floated.time 1 hour ago
                a(href='/user/memeking')
                  img.ui.avatar.image(src='/profile_pictures/user34.jpg')
                  span Keegan Scott
              .image
                img.post(src='/dylansketchbook.jpeg')
              .content
                .description omg lollll look at Dylan&rsquo;s sketchbook he&rsquo;s such a nerdddd
       
 
    .ui.raised.segment
      .ui.label(style="background-color:#2185d08a;color:#000000d1;")
        h4(style="float:left")
          | Tell us what you did to be an upstander.


      .ui.form
        .inline.fields
          label(for='help', style="font-size:120%;") Did you flag the post or comment?
          .field
            .ui.radio.checkbox
              input.hidden(type='radio', value="yes", name='help', tabindex='0')
              label Yes
          .field
            .ui.radio.checkbox
              input.hidden(type='radio', value="no", name='help', tabindex='0')
              label No
      .ui.form
        .inline.fields
          label(for='like', style="font-size:120%;") Did you “like” the target’s post to show support?
          .field
            .ui.radio.checkbox
              input.hidden(type='radio', name='like', tabindex='0')
              label Yes
          .field
            .ui.radio.checkbox
              input.hidden(type='radio', name='like', tabindex='0')
              label No
      .ui.form
        .inline.fields
          label(for='write', style="font-size:120%;") Did you write a supportive or defending comment for the target?
          .field
            .ui.radio.checkbox
              input.hidden(type='radio', name='write',  tabindex='0')
              label Yes
          .field
            .ui.radio.checkbox
              input.hidden(type='radio', name='write', tabindex='0')
              label No
      .ui.form
        .inline.fields
          label(for='write', style="font-size:120%;") Would you tell a trusted adult if you saw this kind of post?
          .field
            .ui.radio.checkbox
              input.hidden(type='radio', name='write',  tabindex='0')
              label Yes
          .field
            .ui.radio.checkbox
              input.hidden(type='radio', name='write', tabindex='0')
              label No
      .ui.form
        .field
          label(for='like', style="font-size:120%;") Why did you act this way?
          label(style="font-size:120%;")
          textarea.glowing-border(rows='2') 

      
    .ui.raised.segment
      .ui.label(style="background-color:#2185d08a;color:#000000d1;")
        h4(style="float:left")
          | Why is it important for people to act against cyberbullying?
      .ui.form
        .inline.fields
          label(style="font-size:120%;")
          textarea.glowing-border(rows='2')

    .ui.raised.segment
      .ui.label(style="background-color:#2185d08a;color:#000000d1;")
        h4(style="float:left")
          | What will you do in the future to be an upstander if you see cyberbullying?
      .ui.form
        .inline.fields
          label(style="font-size:120%;")
          textarea.glowing-border(rows='2')



    br
    .ui.big.green.labeled.icon.button.cyberbullying_end
          i.rocket.icon
          |   Finish Lesson

      
block scripts
  script().
    setTimeout(function(){
      $('.ui.label').transition('bounce');        
    }, 1000);


    setTimeout(function(){
      $('#card1,#card2,#card3').transition({
      animation : 'jiggle',
      duration  : 800,
      interval  : 200
      });    
    }, 2000);


