extends ../ui_layout

block content

  .ui.text.container

    .ui.raised.segment
      h3.ui.header
        i.book.blue.icon
        .content
          | Learn
      hr
      h5.ui.header
        i.right.arrow.icon
        .content
          | <b>Cyberbullying</b> is when someone posts or shares negative things about someone else online.
      h5.ui.header
        i.right.arrow.icon
        .content
          | The <b>bully</b> may use digital devices, sites, or apps. The bully often does this again and again to the same person. 

      #introduction_next.button.ui.mini.green.right.labeled.icon.button
              i.down.arrow.icon
              |   Next
    
    #question.ui.segment.hidden
      h3.ui.header
        i.key.blue.icon
        .content Key Ideas
          .sub.header 
            i.hand.pointer.blue.icon 
            span.blue Click on each label below to learn more
      //- .ui.segments     
      .ui.stackable.two.column.grid
        .ui.column
          #audience.ui.raised.segment
            a.ui.blue.ribbon.label
                //- i.dollar.sign.icon 
                span Bully
            span.hidden(id="audience_info", style="font-weight:600") Someone who hurts a person or a group on purpose more than once.
        .ui.column
          #anonymous.ui.raised.segment
            a.ui.blue.ribbon.label
                //- i.magic.icon 
                span Target
            span.hidden(id="anonymous_info",style="font-weight:600") Someone who is being bullied
        .ui.column
          #curate.ui.raised.segment
            a.ui.blue.ribbon.label
                //- i.magic.icon 
                span Upstander
            span.hidden(id="curate_info",style="font-weight:600") Someone who acts against bullying.
              ul(style="font-weight:400") An upstander might confront the bully or tell a trusted adult. An upstander might support the person being bullied by checking in with them or defending them.       
    
    
    .ui.message.negative.transition.hidden
      i.close.icon
      .header
       | Complete all activities to proceed!
    a(href='javascript:void(0);', onclick='javascript:startIntro();')
        .ui.labeled.icon.button
            i.rocket.icon
            |   Got it!
    br
    br
    br
block scripts
  script().
    var incomplete_activities = ($('#question').is(":hidden") ||  $('#anonymous_info').is(":hidden") || $('#audience_info').is(":hidden")|| $('#curate_info').is(":hidden"));
    $('#introduction_next').on('click', function () {      
      $('#question').show(); 
      $('#question').transition('jiggle');     
      if(!($('#question').is(":hidden") ||  $('#anonymous_info').is(":hidden") || $('#audience_info').is(":hidden") || $('#curate_info').is(":hidden"))){
        $('.ui.labeled.icon.button').addClass('green');
      } 
    });

    $('#audience>a').on('click', function () {      
        $('#audience_info').show(); 
        $('#audience').transition('tada');     
        if(!($('#question').is(":hidden") ||  $('#anonymous_info').is(":hidden") || $('#audience_info').is(":hidden")|| $('#curate_info').is(":hidden"))){
          $('.ui.labeled.icon.button').addClass('green');
        }
    });

    $('#anonymous>a').on('click', function () {      
        $('#anonymous_info').show();      
        $('#anonymous').transition('tada');     
        if(!($('#question').is(":hidden") ||  $('#anonymous_info').is(":hidden") || $('#audience_info').is(":hidden") || $('#curate_info').is(":hidden"))){
          $('.ui.labeled.icon.button').addClass('green');
        }
    });

     $('#curate>a').on('click', function () {      
        $('#curate_info').show(); 
        $('#curate').transition('tada');     
        if(!($('#question').is(":hidden") ||  $('#anonymous_info').is(":hidden") || $('#audience_info').is(":hidden") || $('#curate_info').is(":hidden"))){
          $('.ui.labeled.icon.button').addClass('green');
        }
    });


    function startIntro(){
        if(($('#question').is(":hidden") ||  $('#influence_info').is(":hidden") || $('#money_info').is(":hidden"))){          
          $('.ui.message').addClass('visible')
            .delay(3000)
            .queue(function() {
              $(this).removeClass('visible').dequeue();
          });
        }
        else {
          
          console.log(incomplete_activities)
          window.location.href='/tutorial/cyberbullying';
        }          
      };

      //$(window).on("load", function() {startIntro();});

