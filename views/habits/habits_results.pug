extends ../ui_layout

block content
  -var cdn = "https://dhpd030vnpk29.cloudfront.net";
  .ui.container.resultsAddBottomMargin
    .ui.stackable.column.grid
      .ui.column
        .insertPrint
        .ui.raised.segment.reflectionTopSegment
          h3.ui.header
            i.question.blue.icon
            .content
              | Reflect
          
          .ui.mini.green.right.labeled.icon.button.reflectionSegmentButton.voiceover_reflection1
            i.down.arrow.icon
            |   Start
          .ui.basic.segment.reflectionPromptSegment.hidden  
            .ui.label.resultsPromptLabel
              h4.reflectionCheckboxesPrompt
                | #{reflectionData.habits.Q1.prompt}
            .content.checkOne
              .ui.form
                br
                .inline.fields
                  label(for='notifications', name='notifications') 
                  .field
                    .ui.checkbox
                      input(type='checkbox')
                      label(for='notifications', tabindex='0') 
                        | #{reflectionData.habits.Q1.checkboxLabels[0]}
              .ui.form
                .inline.fields
                  label(for='likes', name='likes') 
                  .field
                    .ui.checkbox
                      input(type='checkbox')
                      label(for='likes', tabindex='0') 
                        | #{reflectionData.habits.Q1.checkboxLabels[1]}
              .ui.form
                .inline.fields
                  label(for='timeSpent', name='timeSpent') 
                  .field
                    .ui.checkbox
                      input(type='checkbox')
                      label(for='timeSpent', tabindex='0') 
                        | #{reflectionData.habits.Q1.checkboxLabels[2]}

        .ui.basic.segment.noPadding.hidden.reflectionTopSegment
          .ui.raised.segment
            .ui.mini.green.right.labeled.icon.button.reflectionSegmentButton.voiceover_reflection2
              i.down.arrow.icon
              |   Next
            .ui.basic.segment.noPadding.reflectionPromptSegment.hidden 
              .ui.label.resultsPromptLabel
                h4.reflectionHabitsTimeEntryPrompt
                  | #{reflectionData.habits.Q2.prompt}
            
              .ui.form
                br
                .ui.form
                  .inline.fields(style="max-width:15em;")
                    input.glowing-border(type='text' id="habits_responseTwo")
                    label  &nbsp&nbspMinutes
              button.ui.green.button#checkTime Find out the actual time!
              br
              .ui.header.habitsReflectionCheckTime(style="display:none;")#undoHide You actually spent:
              .ui.statistics(style="display:none;")
                .statistic
                  .value#habitsActivityTotalTimeMinutes 0
                  .label
                    | min 
                .statistic  
                  .value :
                  .label
                .statistic
                  .value#habitsActivityTotalTimeSeconds 0
                  .label
                    | sec
                

        .ui.basic.segment.noPadding.hidden.reflectionTopSegment
          .ui.raised.segment
            .ui.mini.green.right.labeled.icon.button.reflectionSegmentButton.voiceover_reflection3
              i.down.arrow.icon
              |   Next
            .ui.basic.segment.noPadding.reflectionPromptSegment.hidden 
              .ui.label.resultsPromptLabel
                h4.reflectionCheckboxesPrompt
                  | #{reflectionData.habits.Q3.prompt}
              .content.checkTwo
                .ui.form
                  br
                  .inline.fields
                    label(for='wouldRead', name='wouldRead') 
                    .field
                      .ui.checkbox
                        input(type='checkbox')
                        label(for='wouldRead', tabindex='0') 
                          | #{reflectionData.habits.Q3.checkboxLabels[0]}
                .ui.form
                  .inline.fields
                    label(for='checkSource', name='checkSource') 
                    .field
                      .ui.checkbox
                        input(type='checkbox')
                        label(for='checkSource', tabindex='0') 
                          | #{reflectionData.habits.Q3.checkboxLabels[1]}
                .ui.form
                  .inline.fields
                    label(for='corroboration', name='corroboration') 
                    .field
                      .ui.checkbox
                        input(type='checkbox')
                        label(for='corroboration', tabindex='0') 
                          | #{reflectionData.habits.Q3.checkboxLabels[2]}
                .ui.form
                  .inline.fields
                    label(for='corroboration', name='wouldViewAd') 
                    .field
                      .ui.checkbox
                        input(type='checkbox')
                        label(for='wouldViewAd', tabindex='0') 
                          | #{reflectionData.habits.Q3.checkboxLabels[3]}
          
        .ui.basic.segment.noPadding.hidden.reflectionTopSegment
          .ui.raised.segment
            .ui.mini.green.right.labeled.icon.button.reflectionSegmentButton.voiceover_reflection4
              i.down.arrow.icon
              |   Next
            .ui.basic.segment.noPadding.reflectionPromptSegment.hidden 
              .ui.label.resultsPromptLabel
                h4.reflectionPrompt
                  | #{reflectionData.habits.Q4.prompt}
              .ui.form
                .inline.fields
                  label
                  textarea.glowing-border(rows='2' id="habits_responseFour")
        
    .ui.warning.message.hidden.startPromptsWarning
      .header
        | Click "Start"
    .ui.warning.message.hidden.openAllPromptsWarning
      .header
        | Click "Next"
    br
    .ui.big.labeled.icon.button.results_print(onclick="onPrint()")
          i.right.arrow.icon
          |   Print your responses
    br
    br
    .ui.big.labeled.icon.button.results_end
          i.rocket.icon
          |   Continue
          
