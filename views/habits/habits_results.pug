  script.
    var voiceoverMappings = {
      '.voiceover_reflection1': {
        "initialDelay": 0,
        "delay": 0,
        "files": ['']
      },
      '.voiceover_reflection2': {
        "initialDelay": 500,
        "delay": 0,
        "files": ['']
      },
      '.voiceover_reflection3': {
        "initialDelay": 500,
        "delay": 0,
        "files": ['']
      },
      '.voiceover_reflection4': {
        "initialDelay": 500,
        "delay": 0,
        "files": ['']
      }
    };
  script(src="/module_js/habits/habits_results.js")
  script(src='/module_js/base_results.js')
  script(src='/module_js/voiceover.js')
  
block styles
  link(rel='stylesheet', href='/css/results.css')
    
